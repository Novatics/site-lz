- content_for :body_class, 'l-projetos'

.slider-container
  .royalSlider
    .item
      = image_tag attachment_url(@portfolio_project, :cover_image), class: 'rsImg'
      figure.rsCaption
        .container
          .cover-content
            .cover-info 
              .title = @portfolio_project.name
              .subtitle 
            .nav-down       

.projetos
  .container
    .row
      .col-md-9.col-md-offset-6.project-info
        h3 Detalhes
        p.description = @portfolio_project.detail       
        .category
          - @portfolio_project.tags.each do |tag|
            span class=tag.class_name 
              = tag.name

        ul.project-info-list
          li.col-md-4 
            span.name Local
            span.info = @portfolio_project.place
          li.col-md-4  
            span.name Empresa
            span.info = @portfolio_project.client.name
          li.col-md-4  
            span.name Tipologia
            span.info = @portfolio_project.type.name
          li.col-md-4  
            span.name Área
            span.info = "#{ @portfolio_project.area }m²"

    .row style="padding: 60px 0px"
      #grid.projgrid
        - @portfolio_project.photos.each do |photo|
          article.item.i1x1 data-block="1" 
            a href="#"
              = image_tag attachment_url(photo, :image, :fill, 458, 458)

        article.item.i1x2 data-block="2" 
          a href="#"
            = image_tag('projetos/img-2.png')

        article.item.i1x1 data-block="1" 
          a href="#"
            = image_tag('projetos/img-3.png')

        article.item.i1x1 data-block="1" 
          a href="#"
            = image_tag('projetos/img-3.png')            

        article.item.i1x1 data-block="1" 
          a href="#"
            = image_tag('projetos/img-4.png')

        article.item.i1x2 data-block="2" 
          a href="#"
            = image_tag('projetos/img-5.png')  

= render 'modules/lightbox'